
 
<% @groups.each do |group| %>
      <div class="movie">
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
              <%= image_tag group.image %>
                <div class="panel panel-primary">
                  <div class="panel-header"><h3><%= group.title %></h3></div>
                  <div class="panel-body"><p><%= group.description %></p></div>
                </div>
                <p><a href=<%= group_path(group) %> class="btn btn-primary" role="button">Saber mais</a> </p>
            </div>
        </div>
      </div>
    <% end %>